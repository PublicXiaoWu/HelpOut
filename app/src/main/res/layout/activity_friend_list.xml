<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/default_top"/>

    <LinearLayout
        android:id="@+id/ll_add_friend"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="34dp" android:layout_height="34dp"
            android:layout_marginStart="15dp"
            android:src="@mipmap/ic_new_friend"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="新的朋友"
            android:textColor="#ff333333"
            android:textSize="14sp"
        />

        <!--红点-->
        <View
            android:id="@+id/v_friend_list_point"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/shape_point_home_red"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/v_friend_list_point_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/white"
            android:background="@drawable/shape_point_home_red"
            android:textSize="8sp"
        />


    </LinearLayout>


    <FrameLayout
        android:id="@+id/fl_friend_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
    />


</LinearLayout>