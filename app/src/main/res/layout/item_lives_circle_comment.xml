<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <ImageView
        android:id="@+id/iv_item_lives_circle_comment_avatar"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/ic_user_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_item_lives_circle_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:lines="1"
        android:text="-----"
        android:textColor="#ff333333"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_item_lives_circle_comment_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_item_lives_circle_comment_avatar"
    />

    <TextView
        android:id="@+id/tv_item_lives_circle_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="------"
        android:textColor="#ff999999"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/iv_item_lives_circle_comment_avatar"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_lives_circle_comment_name"
    />
    <TextView
        android:id="@+id/tv_item_lives_circle_comment_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:maxLines="5"
        android:text="----------"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_item_lives_circle_comment_avatar"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_lives_circle_comment_time"
    />


</android.support.constraint.ConstraintLayout>