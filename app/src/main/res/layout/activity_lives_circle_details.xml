<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/in_top"
        layout="@layout/default_top"/>


    <View android:id="@+id/v_line"
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="@color/view_line"
          app:layout_constraintTop_toBottomOf="@+id/in_top"
    />

    <ImageView android:id="@+id/iv_lives_circle_avatar"
               android:layout_width="34dp"
               android:layout_height="34dp"
               android:layout_marginStart="15dp"
               android:layout_marginTop="15dp"
               android:src="@mipmap/ic_user_icon"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/v_line"/>

    <TextView
        android:id="@+id/tv_lives_circle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:lines="1"
        android:text="果农张三"
        android:textColor="#ff333333"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_lives_circle_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_lives_circle_avatar"
    />

    <TextView
        android:id="@+id/tv_lives_circle_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="我是果农张三"
        android:textColor="#ff999999"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/iv_lives_circle_avatar"
        app:layout_constraintTop_toBottomOf="@+id/tv_lives_circle_name"
    />
    <TextView
        android:id="@+id/tv_lives_circle_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:maxLines="5"
        android:text="----------"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_lives_circle_avatar"
        app:layout_constraintTop_toBottomOf="@+id/tv_lives_circle_time"
    />

    <!--九宫格图片-->
    <com.gkzxhn.helpout.view.NineGridTestLayout
        android:id="@+id/ll_lives_circle_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_lives_circle_avatar"
        app:layout_constraintTop_toBottomOf="@+id/tv_lives_circle_content"
        app:sapcing="4dp"/>

    <View android:id="@+id/v_gray_bg"
          android:layout_marginTop="15dp"
          android:layout_width="match_parent"
          android:layout_height="10dp"
          android:background="@color/main_gary_bg"
          app:layout_constraintTop_toBottomOf="@+id/ll_lives_circle_image"
    />

    <TextView
        android:id="@+id/tv_lives_circle_comment_number_show"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="评论 76"
        android:textColor="#ff333333"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_gray_bg"
    />

    <TextView
        android:id="@+id/tv_lives_circle_like_number_show"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:text="点赞 16"
        android:textColor="#ff333333"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_gray_bg"
    />

    <View android:id="@+id/v_lives_circle_comment_number_show"
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:layout_marginTop="15dp"
          android:background="@color/view_line"
          app:layout_constraintTop_toBottomOf="@+id/tv_lives_circle_comment_number_show"
    />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_lives_circle_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/v_lives_circle_comment_number_show">


    </android.support.v7.widget.RecyclerView>

    <View android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="#E9E9E9"
          app:layout_constraintBottom_toBottomOf="parent"/>
    <!--分享-->
    <ImageView
        android:id="@+id/iv_lives_circle_share"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="4dp"
        android:src="@mipmap/ic_lives_share"
        app:layout_constraintBottom_toBottomOf="@+id/tv_lives_circle_like_number"
        app:layout_constraintStart_toStartOf="@id/tv_lives_circle_name"
        app:layout_constraintTop_toTopOf="@+id/tv_lives_circle_like_number"
    />

    <TextView
        android:id="@+id/tv_lives_circle_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:maxLength="5"
        android:text="分享"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_lives_circle_share"
        app:layout_constraintStart_toEndOf="@id/iv_lives_circle_share"
        app:layout_constraintTop_toTopOf="@id/iv_lives_circle_share"
    />
    <!--评论-->
    <ImageView
        android:id="@+id/tv_lives_circle_comment"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@mipmap/ic_lives_comment"
        app:layout_constraintBottom_toBottomOf="@+id/tv_lives_circle_like_number"
        app:layout_constraintEnd_toStartOf="@id/tv_lives_circle_comment_number"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_lives_circle_like_number"
    />

    <TextView
        android:id="@+id/tv_lives_circle_comment_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:maxLength="5"
        android:text="222"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_lives_circle_like_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_lives_circle_comment"
        app:layout_constraintTop_toTopOf="@id/tv_lives_circle_like_number"
    />

    <!--点赞-->
    <ImageView
        android:id="@+id/iv_lives_circle_like_number"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="4dp"
        android:src="@mipmap/ic_lives_liked"
        app:layout_constraintBottom_toBottomOf="@+id/tv_lives_circle_like_number"
        app:layout_constraintEnd_toStartOf="@id/tv_lives_circle_like_number"
        app:layout_constraintTop_toTopOf="@+id/tv_lives_circle_like_number"
    />

    <TextView
        android:id="@+id/tv_lives_circle_like_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="41dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="17dp"
        android:maxLength="5"
        android:text="2"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
    />

</android.support.constraint.ConstraintLayout>