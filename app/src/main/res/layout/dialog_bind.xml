<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/cl_bind_all"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_bind_one"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/selector_item_bind_white_to_gary"
        android:gravity="center"
        android:text="解绑"
        android:textColor="#264C90"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
    />

    <TextView
        android:id="@+id/tv_bind_two"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_item_bind_white_to_gary"
        android:gravity="center"
        android:text="取消"
        android:textColor="#264C90"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_bind_one"
    />

</android.support.constraint.ConstraintLayout>