<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.gkzxhn.helpout.customview.PullToRefreshLayout
        android:id="@+id/loading_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

            <com.gkzxhn.helpout.view.ObservableAlphaScrollView
                android:id="@+id/s_lives_scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/ll_lives_head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_lives_bg"/>
                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rcv_lives_circle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </android.support.v7.widget.RecyclerView>


                </LinearLayout>
            </com.gkzxhn.helpout.view.ObservableAlphaScrollView>

    </com.gkzxhn.helpout.customview.PullToRefreshLayout>


    <LinearLayout
        android:id="@+id/ll_lives_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_lives_back"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/selector_back_white_to_gary"/>
            <TextView
                android:id="@+id/tv_lives_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:alpha="0"
                android:text="生活圈"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_take_picture"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/selector_take_picture"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>