<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_home_legal_advice"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="#d1d8d0"/>

    <TextView
        android:id="@+id/tv_home_legal_advice"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="法律咨询"
        app:layout_constraintEnd_toEndOf="@id/iv_home_legal_advice"
        app:layout_constraintStart_toStartOf="@id/iv_home_legal_advice"
        app:layout_constraintTop_toBottomOf="@id/iv_home_legal_advice"
    />

</android.support.constraint.ConstraintLayout>